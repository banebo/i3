#   _  _____
#  (_)|___ /
#  | |  |_ \
#  | | ___) |
#  |_||____/
#

set $mod Mod1
set $modCtrl Control
set $terminal i3-sensible-terminal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# workspace variable def.
set $work1 "1 "
set $work2 "2 "
set $work3 "3 "
set $work4 "4 "
set $work5 "5"
set $work6 "6"
set $work7 "7"
set $work8 "8"
set $work9 "9   A"
set $work10 "10   B"

# switch to workspace
bindsym $mod+1 workspace $work1
bindsym $mod+2 workspace $work2
bindsym $mod+3 workspace $work3
bindsym $mod+4 workspace $work4
bindsym $mod+5 workspace $work5
bindsym $mod+6 workspace $work6
bindsym $mod+7 workspace $work7
bindsym $mod+8 workspace $work8
bindsym $mod+9 workspace $work9
bindsym $mod+0 workspace $work10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $work1
bindsym $mod+Shift+2 move container to workspace $work2
bindsym $mod+Shift+3 move container to workspace $work3
bindsym $mod+Shift+4 move container to workspace $work4
bindsym $mod+Shift+5 move container to workspace $work5
bindsym $mod+Shift+6 move container to workspace $work6
bindsym $mod+Shift+7 move container to workspace $work7
bindsym $mod+Shift+8 move container to workspace $work8
bindsym $mod+Shift+9 move container to workspace $work9
bindsym $mod+Shift+0 move container to workspace $work10

# xprop to get class, second string
assign [class="Chromium-browser"] $work2
assign [class="Chromium"] $work2
assign [class="qBittorrent"] $work4
assign [class="jetbrains-idea"] $work3
assign [class="Eclipse"] $work3
assign [class="jetbrains-pycharm"] $work3

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	colors {
		background #00000
	    separator #757575
		#                  border         background        text
		focused_workspace  #00b300        #00000            #00b300
		inactive_workspace #000000 	      #000000           #999999
		urgent_workspace   #b51a17	      #000000		    #b51a17
	}

        status_command i3status
}

# ADDITIONAL COMMAND

#brightness
bindsym $modCtrl+1 exec xrandr --output eDP1 --brightness 0.1
bindsym $modCtrl+2 exec xrandr --output eDP1 --brightness 0.2
bindsym $modCtrl+3 exec xrandr --output eDP1 --brightness 0.3
bindsym $modCtrl+4 exec xrandr --output eDP1 --brightness 0.4
bindsym $modCtrl+5 exec xrandr --output eDP1 --brightness 0.5
bindsym $modCtrl+6 exec xrandr --output eDP1 --brightness 0.6
bindsym $modCtrl+7 exec xrandr --output eDP1 --brightness 0.7
bindsym $modCtrl+8 exec xrandr --output eDP1 --brightness 0.8
bindsym $modCtrl+9 exec xrandr --output eDP1 --brightness 0.9
bindsym $modCtrl+0 exec xrandr --output eDP1 --brightness 1.0

# volume
bindsym $modCtrl+Right exec amixer -D pulse sset Master 5%+
bindsym $modCtrl+Left exec amixer -D pulse sset Master 5%-

# borders
hide_edge_borders both

# screen saver off
exec_always xset s off &
exec_always xset -dpms

# wallpaper
exec_always feh --bg-scale $HOME/Pictures/wallpaper.jpg

# touchpad touch to click
exec_always "xinput set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Tapping Enabled' 1"

# i3lock
bindsym $modCtrl+i exec "i3lock -ef -i $HOME/Pictures/lock_screen.png -c 000000"

# suspending, poweroff & update
bindsym $modCtrl+Shift+p exec "i3-nagbar -t warning -m '[?] Are you sure you want to POWEROFF?' -b 'YES' 'poweroff'"
bindsym $modCtrl+Shift+u exec "i3-nagbar -t warning -m '[?] Are you sure you want to UPDATE?' -b 'YES' 'update'"
bindsym $modCtrl+Shift+s exec "i3lock -ef -i $HOME/Pictures/lock_screen.png -c 000000 && systemctl suspend -i"

# deffault window layout
workspace_layout tabbed

# dual monitor setup
set $monitor1 "eDP1"
set $monitor2 "HDMI1"
exec_always xrandr | grep "HDMI1 connected" && xrandr --output $monitor2 --auto --left-of $monitor1
    # monitor1
workspace $work1 output $monitor1
workspace $work2 output $monitor1
workspace $work3 output $monitor1
workspace $work4 output $monitor1
workspace $work5 output $monitor1
workspace $work6 output $monitor1
workspace $work7 output $monitor1
workspace $work8 output $monitor1
    # monitor2
workspace $work9 output $monitor2
workspace $work10 output $monitor2

# easy access
bindsym $modCtrl+Shift+v exec $terminal -e vim
bindsym $modCtrl+Shift+Delete exec $terminal -e "htop -t -s=PERCENT_CPU -d=10 -t"
bindsym $modCtrl+Shift+c exec chromium

# screen shot
bindsym $modCtrl+Shift+Print exec --no-startup-id maim $HOME/Pictures/ss"$(date '+%d-%m-%Y_%H-%M-%S').png"

# startup
exec_always i3-msg "workspace $work1; exec $terminal"
